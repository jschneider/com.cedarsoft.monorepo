<project xmlns="http://maven.apache.org/DECORATION/1.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/DECORATION/1.0.0 http://maven.apache.org/xsd/decoration-1.0.0.xsd">

  <bannerLeft>
    <name>${project.name}</name>
    <src>http://cedarsoft.org/com.cedarsoft/$artifactId.jpg</src>
    <href>index.html</href>
  </bannerLeft>
  <bannerRight>
    <name>cedarsoft</name>
    <src>images/cedarsoft.jpg</src>
    <href>http://www.cedarsoft.com/</href>
  </bannerRight>

  <body>
    <breadcrumbs>
      <item name="cedarsoft" href="http://www.cedarsoft.com" />
      <item name="Open" href="../" />
      <item name="annotations" href="." />
    </breadcrumbs>

    <menu ref="parentProject"/>
    <menu ref="modules" inherit="bottom" />
    <menu ref="reports" inherit="bottom" />
  </body>

  <publishDate position="bottom" format="yyyy-MM-dd HH:mm" />
  <skin>
    <groupId>com.cedarsoft.maven</groupId>
    <artifactId>cedarsoft-skin</artifactId>
    <version>${maven.skin.version}</version>
  </skin>
  <poweredBy>
    <logo name="cedarsoft" href="http://www.cedarsoft.com" img="http://www.cedarsoft.com/objects/poweredby.png" />
  </poweredBy>
</project>
