{
  "compilerOptions": {
    "module": "commonjs",
    "allowJs": false,
    "declaration": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "noErrorTruncation": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "strict": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "target": "es2015"
  },
  "include": [
    "src/*.ts"
  ],
  "compileOnSave": true
}
