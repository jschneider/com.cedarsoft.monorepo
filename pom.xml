          <version>2.10</version>
          <configuration>
            <encoding>${project.build.sourceEncoding}</encoding>
            <stylesheetfile>javadoc/cedarsoft.css</stylesheetfile>
            <tags>
              <tag>
                <name>noinspection</name>
